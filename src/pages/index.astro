---
import Prose from '../components/Prose.astro';
import Base from '../layouts/Base.astro';
import AboutMe from '../components/AboutMe.astro';
const pageTitle = 'Home';
---
<Base pageTitle={pageTitle}>
  <section class="relative h-[45vh] w-full bg-slate-900">
    <div
      class="bg-cover bg-bottom absolute inset-0 bg-cover bg-center bg-no-repeat bg-fixed"
      style="background-image: url('/hero-background.jpeg');"
      aria-hidden="true"
    >
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-6 py-10">
    <AboutMe />
  </div>
</Base>

<style>
  .hero-parallax {
    background-attachment: fixed;
  }

  /* Turn off parallax for touch devices where it jitters/blurs */
  @media (max-width: 1024px) {
    .hero-parallax {
      background-attachment: scroll;
    }
  }
</style>
