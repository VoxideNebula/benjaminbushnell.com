---
import Social from './Social.astro';
const { title, artist, spotify_url, apple_url, soundcloud_url, coverImage } = Astro.props;
---
<div class="group relative flex flex-col items-center gap-5 p-5 bg-white/5 border border-white/10 rounded-3xl transition-all duration-300 hover:border-white/20">
  
  <!-- <div class="relative aspect-square w-full rounded-2xl shadow-2xl border border-white/5"> -->
    <img 
      src={coverImage} 
      alt={title} 
      class="h-80 w-80 object-cover transition-transform duration-700 group-hover:scale-110" 
    />
  <!-- </div> -->

  <div class="flex flex-col items-center text-center w-full px-2">
    <h3 class="font-bold text-white text-xl leading-tight mb-1">{title}</h3>
    <p class="text-gray-400 text-sm font-medium">{artist}</p>
  </div>

  <div class="flex flex-wrap justify-center items-center gap-4 mt-2 w-full pt-4 border-t border-white/5">
    {apple_url && (
      <a href={apple_url} target="_blank" class="text-[10px] text-[#FA243C] font-black uppercase tracking-[0.2em] hover:brightness-150 transition-all">
        Apple Music
      </a>
    )}
    <span class="h-1 w-1 rounded-full bg-white/20"></span>
    {spotify_url && (
      <a href={spotify_url} target="_blank" class="text-[10px] text-[#1DB954] font-black uppercase tracking-[0.2em] hover:brightness-150 transition-all">
        Spotify
      </a>
    )}
    <span class="h-1 w-1 rounded-full bg-white/20"></span>
    {soundcloud_url && (
      <a href={soundcloud_url} target="_blank" class="text-[10px] text-[#FF5500] font-black uppercase tracking-[0.2em] hover:brightness-150 transition-all">
        Soundcloud
      </a>
    )}
  </div>
</div>

